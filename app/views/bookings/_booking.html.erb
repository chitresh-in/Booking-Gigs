<a href="<%= booking_path(booking) %>" class="flex justify-between gap-x-6 py-5">
    <div class="flex min-w-0 gap-x-4">
        <%= image_tag booking.event.poster_image, class: "size-12 flex-none rounded-full bg-gray-50" %>
        <div class="min-w-0 flex-auto">
        <p class="text-sm/6 font-semibold text-gray-900"><%= booking.event.title %></p>
        <p class="mt-1 truncate text-xs/5 text-gray-500"><%= booking.event.start_time.strftime("%d %b %Y, %I:%M %p") %></p>
        </div>
    </div>
    <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
        <p class="text-sm/6 text-gray-900"><%= pluralize(booking.tickets_count, "Ticket") %></p>
        <p class="mt-1 text-xs/5 text-gray-500"><%= booking.status.titleize %></p>
    </div>
</a>
